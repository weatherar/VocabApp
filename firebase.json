{
	"hosting": {
		"public": "dist",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"emulators": {
		"firestore": {
			"port": 8080
		},
		"auth": {
			"port": 9099
		},
		"hosting": {
			"port": 5000
		}
	}
}
